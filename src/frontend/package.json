{
  "name": "transio-frontend",
  "version": "1.0.0",
  "description": "Frontend tests for Transio application",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint static/**/*.js",
    "lint:fix": "eslint --fix static/**/*.js",
    "format": "prettier --write static/**/*.js static/**/*.css static/**/*.html",
    "format:check": "prettier --check static/**/*.js static/**/*.css static/**/*.html",
    "validate:html": "html-validate --config .htmlvalidaterc.json static/*.html"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": ["<rootDir>/tests/**/*.test.js"]
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.2.5",
    "html-validate": "^8.18.1"
  }
}